import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class Update1 {
    public static void main(String[] args) {
        try {
            File existingFile = new File("E:\\achu\\VishnuEclipse\\create1\\FileA.txt");
            List<String> contents = new ArrayList<>();

            try (Scanner sc = new Scanner(existingFile)) {
                while (sc.hasNextLine()) {
                    contents.add(sc.nextLine());
                }
            }
            FileWriter file = new FileWriter(existingFile);
            file.write("hi this is line number 6");
            file.close();

            System.out.println("Existing Contents: " + contents);

          

            System.out.println("File updated successfully!");
        } catch (Exception e) {
            System.out.println();
        }
    }
}

